<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VoiceNotesActivity">

    <TextView
        android:id="@+id/tvVRName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:layout_marginStart="23dp"
        android:ems="13"
        android:text="Voice Recording 1"
        android:textSize="20sp"
        android:textStyle="bold"
        />

    <ImageView
        android:id="@+id/ivPlayBtnVNA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_media_play"
        android:layout_below="@id/tvVRName"
        android:layout_alignParentStart="true"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="20dp"
        android:visibility="visible"
        />

    <ImageView
        android:id="@+id/ivPauseBtnVNA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_media_pause"
        android:layout_below="@id/tvVRName"
        android:layout_alignParentStart="true"
        android:layout_marginTop="6dp"
        android:layout_marginStart="20dp"
        android:visibility="invisible"
        />

    <SeekBar
        android:id="@+id/recordingSeekBarVNA"
        android:layout_toEndOf="@id/ivPlayBtnVNA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tvVRName"
        android:layout_marginTop="12.5dp"
        android:layout_toStartOf="@id/tvDurationVNA"
        />

    <TextView
        android:id="@+id/tvDurationVNA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:layout_below="@id/tvVRName"
        android:layout_marginTop="10dp"
        android:textSize="16sp"
        android:text="2:00"
        />

</RelativeLayout>